<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <Button
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:text="@string/oc1"
        android:id="@+id/OC1button" />

    <Button
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:text="@string/oc2"
        android:id="@+id/OC2button"
        android:layout_above="@+id/OCoffbutton"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:text="@string/ocoff"
        android:id="@+id/OCoffbutton"
        android:layout_below="@+id/OC1button"
        android:layout_alignRight="@+id/OC2button"
        android:layout_alignEnd="@+id/OC2button"
        android:layout_marginRight="65dp"
        android:layout_marginEnd="65dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/OCoffbutton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="72dp" />

    <Button
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:text="@string/Back"
        android:id="@+id/Mainbutton"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/OCoffbutton"
        android:layout_alignStart="@+id/OCoffbutton"
        android:layout_marginBottom="47dp" />

</RelativeLayout>